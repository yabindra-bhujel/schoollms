#!/bin/bash

container_type="dev"

if [[ $1 == "-p" ]]; then
  container_type="prod"
fi


run_container() {

  if [ "$container_type" = "prod" ]; then
    echo "Running the production container"
    docker-compose -f docker-compose-prod.yml up --build
  else
    echo "Running the development container"
    docker-compose -f docker-compose.yml up --build
  fi
  
}

run_container
